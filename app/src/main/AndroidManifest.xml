<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sheva.newsprovider">
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyLightTheme"
        android:name=".App">
        <activity android:name=".mvp.ui.activities.MainActivity"/>
        <activity android:name=".mvp.ui.activities.LoginActivity"/>
        <activity android:name=".mvp.ui.activities.RegisterActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".mvp.ui.activities.NewsItem" />
        <activity android:name=".mvp.ui.activities.SettingsActivity" />
        <activity android:name=".mvp.ui.activities.InterestsActivity" />
    </application>

</manifest>